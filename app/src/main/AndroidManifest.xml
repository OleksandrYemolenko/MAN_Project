<?xml version="1.1" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pls">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AlgoActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.SlidrActivityTheme"
            tools:targetApi="jelly_bean">
            <intent-filter>
                <action android:name="android.intent.action.ALGOS" />

                <category android:name="android.intent.category.ALGOS" />
            </intent-filter>
        </activity>
        <activity android:name=".MathActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.SlidrActivityTheme"
            tools:targetApi="jelly_bean">
            <intent-filter>
                <action android:name="android.intent.action.ALGOS" />

                <category android:name="android.intent.category.ALGOS" />
            </intent-filter>
        </activity>
        <activity android:name=".PhysicsActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.SlidrActivityTheme"
            tools:targetApi="jelly_bean">
            <intent-filter>
                <action android:name="android.intent.action.ALGOS" />

                <category android:name="android.intent.category.ALGOS" />
            </intent-filter>
        </activity>
        <activity
            android:parentActivityName=".AlgoActivity"
            android:name=".AlgoContentPageActivity"
            android:label="@string/title_activity_content_page"
            android:theme="@style/AppTheme.SlidrActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.CONTENTPAGE" />

                <category android:name="android.intent.category.CONTENTPAGE" />
            </intent-filter>
        </activity>
    </application>

</manifest>